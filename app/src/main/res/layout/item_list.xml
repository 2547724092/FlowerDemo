<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_list_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="用户名："
        android:textColor="#666666"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_list_user"
        android:layout_marginStart="10dp"
        android:text="鲜花名称"
        android:textSize="16sp"
        android:textColor="#666666"/>

    <TextView
        android:id="@+id/tv_list_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_list_name"
        android:layout_marginStart="10dp"
        android:text="鲜花数量"
        android:textSize="16sp"
        android:textColor="#666666"/>

    <TextView
        android:id="@+id/tv_list_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_list_name"
        android:layout_toEndOf="@+id/tv_list_num"
        android:layout_marginStart="30dp"
        android:text="鲜花总价"
        android:textSize="16sp"
        android:textColor="#666666"/>

    <TextView
        android:id="@+id/tv_list_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_list_num"
        android:layout_marginStart="10dp"
        android:text="下单时间"
        android:textSize="16sp"
        android:textColor="#666666"/>

</RelativeLayout>