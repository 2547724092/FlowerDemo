<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFF8F8F8"
    tools:context=".ui.fragment.AdminUserFragment">

    <ListView
        android:id="@+id/lv_ad_user_info"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="20dp"
        android:background="@drawable/background_square">
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp">

        <Button
            android:id="@+id/bt_ad_clear_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="清除查询"
            android:textColor="#FF999999"
            android:textSize="16sp"
            android:layout_weight="1"
            android:background="@drawable/background_bt_gray"
            android:stateListAnimator="@drawable/anim_state"/>

        <Button
            android:id="@+id/bt_ad_retrieve_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查询"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp"
            android:layout_weight="1"
            android:background="@drawable/background_bt_blue"
            android:stateListAnimator="@drawable/anim_state"/>
    </LinearLayout>

</LinearLayout>
